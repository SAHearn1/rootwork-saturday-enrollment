# Database Configuration for Vercel Postgres
# Copy this file to .env and fill in your actual database credentials
# The database should be named "EnrollmentData" in your Vercel project

# Standard Postgres connection URL
POSTGRES_URL="postgres://[username]:[password]@[host]:5432/EnrollmentData?sslmode=require"

# Non-pooling connection URL (for migrations and direct queries)
POSTGRES_URL_NON_POOLING="postgres://[username]:[password]@[host]:5432/EnrollmentData?sslmode=require"

# Prisma Accelerate connection URL
POSTGRES_PRISMA_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=[your-api-key]"

# Optional: Stripe Configuration (for payment processing)
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_WEBHOOK_SECRET="whsec_..."

# Optional: Email Configuration (for confirmation emails)
# RESEND_API_KEY="re_..."
